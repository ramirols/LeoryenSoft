<style>
    details > .faq-content {
        display: grid;
        grid-template-rows: 0fr;
        transition:
            grid-template-rows 300ms ease,
            opacity 200ms ease;
        opacity: 0;
    }

    details[open] > .faq-content {
        grid-template-rows: 1fr;
        opacity: 1;
    }

    .faq-inner {
        overflow: hidden;
    }
</style>
