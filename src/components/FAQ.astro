---
import { ChevronDown } from "lucide-astro";

type Lang = "es" | "en";

const { lang = "es" } = Astro.props as { lang?: Lang };

const i18n: Record<Lang, any> = {
    es: {
        title: "Preguntas frecuentes sobre desarrollo web y software",
        subtitle:
            "Respondemos las dudas más comunes sobre nuestros servicios de desarrollo web, software a medida, SEO, mantenimiento y procesos de trabajo.",
        faqs: [
            {
                q: "¿En cuánto tiempo entregan un proyecto web?",
                a: "El tiempo de entrega depende del alcance del proyecto. Las landing pages o sitios simples suelen entregarse entre 3 y 7 días. Proyectos más complejos como webs corporativas, e-commerce o software a medida pueden tomar entre 2 y 4 semanas.",
            },
            {
                q: "¿Ofrecen mantenimiento después de la entrega?",
                a: "Sí. Ofrecemos planes de mantenimiento web que incluyen soporte técnico, actualizaciones, seguridad y mejoras de rendimiento.",
            },
            {
                q: "¿Puedo solicitar cambios después del diseño inicial?",
                a: "Claro. Todos nuestros proyectos incluyen revisiones para asegurar que el resultado final represente correctamente tu marca.",
            },
            {
                q: "¿Trabajan con SEO y optimización de velocidad?",
                a: "Sí. Todos nuestros desarrollos incluyen SEO técnico, optimización de velocidad y buenas prácticas para Google.",
            },
            {
                q: "¿Desarrollan tiendas online o e-commerce?",
                a: "Sí. Creamos tiendas online optimizadas para conversión con carrito y pasarelas de pago.",
            },
            {
                q: "¿Trabajan con empresas y emprendedores?",
                a: "Sí. Trabajamos con emprendedores, startups y empresas que buscan crecer digitalmente.",
            },
            {
                q: "¿Qué tecnologías utilizan?",
                a: "Utilizamos Astro, React, Tailwind, Node.js y bases de datos seguras.",
            },
            {
                q: "¿El sitio será responsive?",
                a: "Sí. Todos nuestros proyectos son 100% responsive.",
            },
            {
                q: "¿Puedo escalar mi proyecto en el futuro?",
                a: "Sí. Diseñamos soluciones escalables que crecen con tu negocio.",
            },
            {
                q: "¿Cómo puedo solicitar una cotización?",
                a: "Puedes contactarnos por el formulario o WhatsApp para una cotización personalizada.",
            },
        ],
    },
    en: {
        title: "Frequently Asked Questions about Web & Software Development",
        subtitle:
            "We answer the most common questions about our web development, custom software, SEO, maintenance, and workflow.",
        faqs: [
            {
                q: "How long does a web project take?",
                a: "Delivery time depends on the project scope. Landing pages usually take 3 to 7 days. More complex projects may take 2 to 4 weeks.",
            },
            {
                q: "Do you offer maintenance after delivery?",
                a: "Yes. We offer web maintenance plans including support, updates, security, and performance improvements.",
            },
            {
                q: "Can I request changes after the initial design?",
                a: "Of course. All projects include revisions to ensure the final result matches your brand.",
            },
            {
                q: "Do you handle SEO and speed optimization?",
                a: "Yes. All projects include technical SEO and performance optimization.",
            },
            {
                q: "Do you build e-commerce websites?",
                a: "Yes. We create conversion-optimized online stores with carts and payment gateways.",
            },
            {
                q: "Do you work with companies and startups?",
                a: "Yes. We work with entrepreneurs, startups, and companies aiming to grow digitally.",
            },
            {
                q: "What technologies do you use?",
                a: "We use modern technologies like Astro, React, Tailwind, Node.js, and secure databases.",
            },
            {
                q: "Will my website be responsive?",
                a: "Yes. All our projects are fully responsive.",
            },
            {
                q: "Can my project scale in the future?",
                a: "Yes. We design scalable solutions that grow with your business.",
            },
            {
                q: "How can I request a quote?",
                a: "Contact us via the form or WhatsApp for a personalized quote.",
            },
        ],
    },
};

const t = i18n[lang];
---

<section id="faq" class="py-24 bg-gray-50">
    <div class="max-w-5xl mx-auto px-6">
        <header class="text-center mb-14">
            <h2 class="text-3xl md:text-4xl font-bold mb-4">
                {t.title}
            </h2>
            <p class="text-gray-600 max-w-2xl mx-auto">
                {t.subtitle}
            </p>
        </header>

        <div class="space-y-5">
            <!-- 1 -->
            <details class="group rounded-2xl bg-white shadow-sm border">
                <summary
                    class="flex cursor-pointer list-none items-center justify-between gap-4 p-6 font-semibold text-lg"
                >
                    {t.faqs[0].q}
                    <ChevronDown
                        class="h-6 w-6 transition-transform duration-300 group-open:rotate-180"
                    />
                </summary>

                <div class="faq-content">
                    <div
                        class="faq-inner px-6 pb-6 text-gray-600 leading-relaxed"
                    >
                        {t.faqs[0].a}
                        <strong>{t.faqs[0].a}</strong> o sitios simples suelen entregarse
                        entre
                        <strong>{t.faqs[0].a}</strong>. Proyectos más complejos
                        como
                        <strong
                            >{t.faqs[0].a}</strong
