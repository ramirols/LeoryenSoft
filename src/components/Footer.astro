---
type Lang = "es" | "en";

const { lang = "es" } = Astro.props as { lang?: Lang };

const i18n: Record<
    Lang,
    {
        description: string;
        nav: string;
        contact: string;
        rights: string;
        links: {
            home: string;
            services: string;
            projects: string;
            blog: string;
        };
    }
> = {
    es: {
        description: "Desarrollo web moderno y optimizado para negocios.",
        nav: "Navegación",
        contact: "Contáctame",
        rights: "Todos los derechos reservados.",
        links: {
            home: "Inicio",
            services: "Servicios",
            projects: "Proyectos",
            blog: "Blog",
        },
    },
    en: {
        description: "Modern and optimized web development for businesses.",
        nav: "Navigation",
        contact: "Contact",
        rights: "All rights reserved.",
        links: {
            home: "Home",
            services: "Services",
            projects: "Projects",
            blog: "Blog",
        },
    },
};

const t = i18n[lang];
---

<footer class="bg-primary py-12 mt-20 text-gray-300 relative">
    <div class="relative z-10">
        <div class="max-w-6xl mx-auto px-6 grid md:grid-cols-3 gap-10">
            <!-- Marca -->
            <div>
                <h3 class="text-xl font-semibold text-white">LeoryenSoft</h3>
                <p class="mt-3 text-gray-400">
                    {t.description}
                </p>
            </div>

            <!-- Navegación -->
            <div>
                <h4 class="text-lg font-semibold text-white mb-3">
                    {t.nav}
                </h4>
                <ul class="space-y-2">
                    <li>
                        <a class="hover:text-white" href={`/${lang}#inicio`}
                            >{t.links.home}</a
                        >
                    </li>
                    <li>
                        <a class="hover:text-white" href={`/${lang}/servicios`}
                            >{t.links.services}</a
                        >
                    </li>
                    <li>
                        <a class="hover:text-white" href={`/${lang}/proyectos`}
                            >{t.links.projects}</a
                        >
                    </li>
                    <li>
                        <a class="hover:text-white" href={`/${lang}/blog`}
                            >{t.links.blog}</a
                        >
                    </li>
                </ul>
            </div>

            <!-- Contacto -->
            <div>
                <h4 class="text-lg font-semibold text-white mb-3">
                    {t.contact}
                </h4>
                <ul class="space-y-2">
                    <li>
                        <a
                            class="hover:text-white"
                            href="mailto:ramirols.dev@gmail.com"
                        >
                            ramirols.dev@gmail.com
                        </a>
                    </li>
                    <li>
                        <a
                            class="hover:text-white"
                            href="https://wa.link/4v2a4j"
                            target="_blank"
                        >
                            WhatsApp
                        </a>
                    </li>
                    <li>
                        <a
                            class="hover:text-white"
                            href="https://linkedin.com/in/ramirols"
                            target="_blank"
                        >
                            LinkedIn
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Copyright -->
        <p
            class="text-center text-white mt-10 border-t border-gray-700 pt-5 text-sm"
        >
            © {new Date().getFullYear()} LeoryenSoft — {t.rights}
        </p>
    </div>
</footer>